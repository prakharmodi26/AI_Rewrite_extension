{
  "manifest_version": 3,
  "name": "AI Actions",
  "version": "0.1.0",
  "description": "Select text on any page and instantly rewrite, summarize, shorten, expand, or fix grammar — all in a clean, focused overlay.",
  "icons": {
    "16": "src/icons/icon-16.png",
    "32": "src/icons/icon-32.png",
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  },
  "action": {
    "default_title": "AI Actions",
    "default_icon": {
      "16": "src/icons/icon-16.png",
      "32": "src/icons/icon-32.png"
    },
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options.html",
  "commands": {
    "rewrite_default": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "AI Rewrite (Clear & Professional)"
    },
    "summarize": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "AI Summarize (3–5 bullets)"
    }
  }
  ,
  "web_accessible_resources": [
    {
      "resources": [
        "src/icons/icon-16.png",
        "src/icons/icon-32.png",
        "src/icons/icon-48.png",
        "src/icons/icon-128.png",
        "src/icons/pencil.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}